//- index.jade
//- extends ./layout.jade

block row-content
  div.col-lg-6.col-md-6.col-xs-12
    h2 You have the following choices for #{currentCity}
    ul
      each answer in answers
        li= answer.text
    div.well
      form.jobForm.form-horizontal(method='post', action="/step")
        fieldset
          div.form-group.row
            label.col-lg-2.col-xs-2(for='labelfield') Label:
            div.col-lg-9.col-xs-10
              input.form-control(type='text', name='step', placeholder='What do you want to do next?', required='true')
          div.form-group.row
            div.col-lg-4.col-lg-push-1.col-xs-4
              input.btn.btn-block(type='submit', value='Submit')